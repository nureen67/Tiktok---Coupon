<body>
  <h1>Claim Kupon TikTok RM5</h1>
  <p>Klik butang di bawah untuk mendapatkan kupon anda sekarang!</p>
  <div id="timer">10</div>
  <button id="claimBtn" disabled>Claim Sekarang</button>

  <script>
    // Countdown 10 saat
    let timeLeft = 10;
    const timerEl = document.getElementById('timer');
    const btn = document.getElementById('claimBtn');

    const countdown = setInterval(() => {
      timeLeft--;
      timerEl.textContent = timeLeft;
      if(timeLeft <= 0){
        clearInterval(countdown);
        timerEl.style.display = 'none';
        btn.disabled = false;
      }
    }, 1000);

    // Detect country (API percuma, JSON)
    fetch('https://ipapi.co/json/')
      .then(res => res.json())
      .then(data => {
        if(data.country_code !== 'MY'){ // kalau bukan Malaysia
          btn.disabled = true;
          btn.textContent = 'Hanya untuk pengguna Malaysia';
        }
      })
      .catch(() => {
        // fallback, enable button kalau API gagal
        btn.disabled = false;
      });

    // Redirect ke TikTok affiliate
    btn.addEventListener('click', () => {
      window.location.href = 'https://vt.tiktok.com/ZSH3TStvrK2uc-UwadD/';
    });
  </script>
</body>
